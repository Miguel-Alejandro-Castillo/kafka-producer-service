    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "dotenv": "^17.2.2",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.0",
    "kafkajs": "^2.2.4"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0"
  }
