{
  "name": "kafka-producer-service",
  "version": "1.0.0",
  "description": "REST API service for producing Kafka messages using Fastify.",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node --test test/**/*.test.js",
